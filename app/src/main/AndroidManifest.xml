<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.frograming" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/rana_mascota"
        android:label="@string/app_name"
        android:roundIcon="@drawable/rana_mascota"
        android:supportsRtl="true"
        android:theme="@style/Theme.Frograming"
        android:usesCleartextTraffic="true"
        tools:targetApi="31" >
        <activity
            android:name=".VerPerfilActivity"
            android:exported="false"
            android:label="Ver Perfil"/>
        <activity
            android:name=".EditarPerfilActivity"
            android:exported="false"
            android:label="Editar Perfil" />
        <activity
            android:name=".RecuperarContrasenaActivity"
            android:exported="false"
            android:label="Recuperar Contraseña" />
        <activity
            android:name=".MenuPrincipalActivity"
            android:exported="false"
            android:label="Menú Principal" />
        <activity
            android:name=".TematicaActivity"
            android:exported="false"
            android:label="Temática" />
        <activity
            android:name=".RegistroActivity"
            android:exported="false"
            android:label="Registro" />
        <activity
            android:name=".InicioSesionActivity"
            android:exported="true"
            android:icon="@drawable/rana_mascota"
            android:label="Frograming"
            android:theme="@style/SplashTheme" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>